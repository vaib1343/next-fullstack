generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  task          Task[]
}

enum Status {
  CREATED
  IN_PROGRESS
  FINISHED
}

enum Priority {
  P1
  P2
  P3
}

model Task {
  id          String    @id @default(cuid())
  title       String
  description String
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  Status      Status
  priority    Priority
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @default(now())

}
